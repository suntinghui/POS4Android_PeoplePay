<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/corner_bg"
    android:stretchColumns="1" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/transfer_item_selector"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/contentLayout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" 
            android:padding="5dip">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip" >

                <TextView
                    android:id="@+id/tv_date"
                    android:textColor="@color/blue_1"
                    android:textSize="17sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2014-04-05" />
                
                <TextView
                    android:id="@+id/tv_week"
                    android:textColor="@color/blue_1"
                    android:textSize="17sp"
                    android:layout_toRightOf="@id/tv_date"
                    android:layout_marginLeft="50dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="星期五" />
            </RelativeLayout>
	
            <View android:layout_width="fill_parent"
                android:layout_height="0.7dip"
                android:background="@color/gray"/>
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dip"
                android:layout_marginLeft="5dip"
                android:gravity="center_vertical" >

                <TextView
                    android:id="@+id/tv_cardnum"
                    style="@style/black_16"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="6226******2129" />

                <TextView
                    android:id="@+id/tv_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/tv_cardnum"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="right"
                    android:text="￥50.00"
                    android:layout_marginRight="10dip"
                    android:textColor="@color/orange"
                    android:textSize="22sp"
                    android:textStyle="bold" />
            </RelativeLayout>
            
            <RelativeLayout android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TextView android:id="@+id/tv_revoke"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    style="@style/black_15"
                    android:layout_marginRight="10dip"
                    android:text="撤销成功"/>
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/moreLayout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="10dip"
            android:visibility="gone" >

            <Button
                android:id="@+id/moreButton"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/btn_login_n"
                android:text="点击查看更多" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>