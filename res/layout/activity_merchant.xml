<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/top" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/ibtn_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/head_image" />

            <TextView
                android:id="@+id/tv_head"
                style="@style/white_18"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dip"
                android:gravity="center_horizontal"
                android:text="欢迎登录" />
        </LinearLayout>
    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="50dip" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_marginTop="10dip"
                android:background="#808080" />

            <RelativeLayout
                android:id="@+id/layout_msg_top"
                android:layout_width="fill_parent"
                android:layout_height="40dip"
                android:layout_marginTop="5dip"
                android:gravity="center_vertical" >

                <ImageView
                    android:id="@+id/iv_0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dip"
                    android:background="@drawable/merchant_icon_0" />

                <TextView
                    style="@style/black_16"
                    android:layout_toRightOf="@id/iv_0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dip"
                    android:text="@string/in_account_msg" />

                <ImageView
                    android:id="@+id/iv_pull"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dip"
                    android:background="@drawable/merchant_icon_pull" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_marginTop="5dip"
                android:background="#808080" />

            <LinearLayout
                android:id="@+id/layout_msg_blow"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dip"
                android:orientation="vertical"
                android:visibility="gone" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dip"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/gray_15"
                        android:layout_width="80dip"
                        android:layout_height="30dip"
                        android:text="@string/bank_no" />

                    <TextView
                        style="@style/gray_15"
                        android:id="@+id/tv_bank_no"
                        android:layout_width="wrap_content"
                        android:layout_height="30dip"
                        android:layout_marginLeft="20dip"
                         />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dip"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/gray_15"
                        android:layout_width="80dip"
                        android:layout_height="30dip"
                        android:text="@string/open_account_name" />

                    <TextView
                        style="@style/gray_15"
                        android:id="@+id/tv_open_account_name"
                        android:layout_width="wrap_content"
                        android:layout_height="30dip"
                        android:layout_marginLeft="20dip"
                         />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dip"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/gray_15"
                        android:layout_width="80dip"
                        android:layout_height="30dip"
                        android:text="@string/open_account_bank" />

                    <TextView
                        style="@style/gray_15"
                        android:id="@+id/tv_open_account_bank"
                        android:layout_width="wrap_content"
                        android:layout_height="30dip"
                        android:layout_marginLeft="20dip"
                        />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:layout_marginTop="1dip"
                    android:background="#808080" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_marginTop="15dip"
                android:background="#808080" />

            <RelativeLayout
                android:id="@+id/layout_modify_pwd"
                android:layout_width="fill_parent"
                android:layout_height="40dip"
                android:layout_marginTop="5dip"
                android:gravity="center_vertical" >

                <ImageView
                    android:id="@+id/iv_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dip"
                    android:background="@drawable/merchant_icon_1" />

                <TextView
                    style="@style/black_16"
                    android:layout_toRightOf="@id/iv_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dip"
                    android:text="@string/modify_pwd" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dip"
                    android:background="@drawable/icon_arrow_right" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_marginTop="5dip"
                android:background="#808080" />

            <RelativeLayout
                android:id="@+id/layout_more_setting"
                android:layout_width="fill_parent"
                android:layout_height="40dip"
                android:layout_marginTop="5dip"
                android:gravity="center_vertical" >

                <ImageView
                    android:id="@+id/iv_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dip"
                    android:background="@drawable/merchant_icon_2" />

                <TextView
                    style="@style/black_16"
                    android:layout_toRightOf="@id/iv_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dip"
                    android:text="@string/more_setting" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dip"
                    android:background="@drawable/icon_arrow_right" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_marginTop="5dip"
                android:background="#808080" />

            <RelativeLayout
                android:id="@+id/layout_connect"
                android:layout_width="fill_parent"
                android:layout_height="40dip"
                android:layout_marginTop="5dip"
                android:gravity="center_vertical" >

                <ImageView
                    android:id="@+id/iv_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dip"
                    android:background="@drawable/merchant_icon_3" />

                <TextView
                    style="@style/black_16"
                    android:layout_toRightOf="@id/iv_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dip"
                    android:text="@string/conect" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dip"
                    android:background="@drawable/icon_arrow_right" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_marginTop="5dip"
                android:background="#808080" />

            <Button
                android:id="@+id/btn_exit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dip"
                android:layout_marginRight="30dip"
                android:layout_marginTop="20dip"
                style="@style/white_20"
                android:background="@drawable/merchant_btn_exit"
                android:text="@string/exit_safity" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>